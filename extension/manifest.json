{
  "manifest_version": 3,
  "name": "yt-ad-block",
  "description": "Skips ads",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "block.jpg"
  },
  "background": {
    "service_worker": "./scripts/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["./scripts/content.js"]
    }
  ],
  "permissions": ["storage", "activeTab", "tabs", "scripting"]
}
